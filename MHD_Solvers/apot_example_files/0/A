FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      A;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [1 1 -2 0 0 -1 0];

internalField   uniform (0 0 0);

boundaryField
{
	
    ".*"
    {
        type            calculated;
        value           $internalField;
    }
    
    //remove all lines below if not needed
        symPlane
    {
		type symmetry;
	}
    
	inlet
	{
		type cyclic;
	}
	outlet
	{
		type cyclic;
	}
}
