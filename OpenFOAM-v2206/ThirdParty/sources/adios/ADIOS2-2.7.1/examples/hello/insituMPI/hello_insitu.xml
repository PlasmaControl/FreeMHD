<?xml version="1.0"?>
<!-- Config XML file fo the  
     - heatTransfer_write_adios2 
     - heatTransfer_read
     executables in build/bin -->

<adios-config>

    <!--====================================
           Configuration for the Writer 
        ====================================-->

    <io name="writer">
        <engine type="InSituMPI">
            <parameter key="verbose" value="5"/>
        </engine>
    </io>


    <!--====================================
           Configuration for the Reader 
        ====================================-->

    <io name="reader">
        <engine type="InSituMPI">
            <parameter key="verbose" value="5"/>
        </engine>
    </io>
</adios-config>
