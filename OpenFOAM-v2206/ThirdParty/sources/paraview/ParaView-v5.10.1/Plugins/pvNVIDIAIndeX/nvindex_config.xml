<!-- nvindex_config.xml: NVIDIA IndeX for ParaView Plugin configuration file.
     The plugin will look for this configuration file in the default ParaView
     configuration directory (typically $HOME/.config/ParaView/) or, if it is
     defined, in the directory specified by the environment variable
     NVINDEX_PVPLUGIN_HOME.

     Any settings specified here have precedence over those from the 'Settings'
     dialog.
-->

<index_config>
    <!-- NVIDIA IndeX license, can be used to override the default license. -->
    <license>
        <!-- <vendor_key>put_vendor_key_here</vendor_key> -->
        <!-- <secret_key>put_secret_key_here</secret_key> -->
    </license>

    <!-- Network settings -->
    <network>
        <!-- Cluster network mode (protocol): OFF, TCP, UDP, TCP_WITH_DISCOVERY -->
        <!-- <cluster_mode>TCP</cluster_mode> -->

        <!-- Cluster interface address: Sets the network interface to be used
             for outgoing packets. This may also be an interface name, but it
             must be the same on all hosts. If not set, a network interface will
             be chosen automatically, which might not always be the right one.
             The string may end with ':' and a port number to select which port
             to listen on for UDP and TCP unicast traffic. If no port is set and
             unicast only mode is set, port 10000 will be used.
        -->
        <!-- <cluster_interface_address>172.161.123.0/24:10001</cluster_interface_address> -->

        <!-- Multicast address. Only used when cluster_mode is set to UDP. -->
        <!-- <multicast_address>224.1.3.2</multicast_address> -->

        <!-- Discovery address. Only used when cluster_mode is set to TCP_WITH_DISCOVERY. -->
        <!-- <discovery_address>224.1.3.3:5555</discovery_address> -->

        <!-- Controls usage of InfiniBand RDMA in the networking layer. -->
        <!-- <use_rdma>no</use_rdma> -->
    </network>
</index_config>
