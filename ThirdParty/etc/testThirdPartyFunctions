echo "CC=$(whichCC)"
echo "CXX=$(whichCXX)"
echo "mpicc=$(whichMpicc)"
echo "mpicxx=$(whichMpicxx)"

exportCompiler

echo ========================================
echo "using:  $CC $CFLAGS"
echo "using:  $CXX $CXXFLAGS"
echo
echo ========================================

